<%= @user.name %>, <%= @user.email %>, <%= @user.created_at %>
<%= Time.now %>
<section class="stats">
      <%= render 'shared/stats' %>
</section>

<div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
   <% if @user.microposts.any? %>
     <h3>Microposts (<%= @user.microposts.count %>)</h3>
     <ol class="microposts">
       <%= render @microposts %>
     </ol>
     <%= will_paginate @microposts %>
   <% end %>
</div>
